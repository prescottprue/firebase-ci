{
  "name": "firebase-ci",
  "version": "0.6.0",
  "description": "Simplified Firebase interaction for continuous integration including deploying hosting, functions, and database/storage rules.",
  "main": "lib/index.js",
  "bin": {
    "firebase-ci": "./bin/firebase-ci"
  },
  "files": [
    "lib",
    "bin",
    "cmds"
  ],
  "scripts": {
    "clean:app": "rimraf lib",
    "clean:test": "rimraf coverage",
    "lint": "eslint src cmds test bin/firebase-ci",
    "lint:fix": "npm run lint -- --fix",
    "test": "env-cmd ./test/.env mocha ./test/**/**/*.spec.js",
    "test:cov": "npm run clean:test && nyc npm run test",
    "build:lib": "tsc src/**/* --outDir lib",
    "build": "npm run clean:app && npm run build:lib",
    "watch": "npm run build:lib -- --stats --progress --colors --watch",
    "prepare": "npm run clean:app && npm run build",
    "pre-push": "npm run lint",
    "codecov": "cat coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prescottprue/firebase-ci.git"
  },
  "keywords": [
    "firebase",
    "firebase ci",
    "firebase-tools",
    "ci",
    "deploy",
    "gitlab",
    "gitlab-ci",
    "firebase-functions",
    "travis-ci",
    "circle-ci"
  ],
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "npmName": "firebase-ci",
  "npmFileMap": [
    {
      "basePath": "/lib/",
      "files": [
        "*.js"
      ]
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-ci/issues"
  },
  "homepage": "https://github.com/prescottprue/firebase-ci",
  "dependencies": {
    "chalk": "^2.4.1",
    "command-exists": "^1.2.8",
    "commander": "^2.15.1",
    "figures": "^3.0.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "env-cmd": "^8.0.2",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.0.3",
    "tslib": "^1.9.3",
    "tslint": "5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.2.12",
    "tslint-react": "3.6.0",
    "typedoc": "0.14.0",
    "typescript": "3.2.2",
    "typescript-tslint-plugin": "0.2.1"
  }
}
