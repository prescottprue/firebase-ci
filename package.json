{
  "name": "firebase-ci",
  "version": "0.7.0",
  "description": "Simplified Firebase interaction for continuous integration including deploying hosting, functions, and database/storage rules.",
  "main": "lib/index.js",
  "bin": {
    "firebase-ci": "./bin/firebase-ci"
  },
  "files": [
    "src",
    "lib",
    "bin",
    "cmds"
  ],
  "scripts": {
    "clean:app": "rimraf lib",
    "clean:test": "rimraf coverage",
    "lint": "eslint src cmds test bin/firebase-ci",
    "lint:fix": "npm run lint -- --fix",
    "test": "env-cmd -f ./test/.env mocha ./test/**/**/*.spec.js",
    "test:cov": "npm run clean:test && nyc --reporter=lcov npm run test",
    "build:lib": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build": "npm run clean:app && npm run build:lib",
    "watch": "npm run build:lib -- --stats --progress --colors --watch",
    "prepare": "npm run clean:app && npm run build",
    "pre-push": "npm run lint",
    "codecov": "cat coverage/lcov.info | codecov",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prescottprue/firebase-ci.git"
  },
  "keywords": [
    "firebase",
    "firebase ci",
    "firebase-tools",
    "ci",
    "deploy",
    "gitlab",
    "gitlab-ci",
    "firebase-functions",
    "travis-ci",
    "circle-ci"
  ],
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "npmName": "firebase-ci",
  "npmFileMap": [
    {
      "basePath": "/lib/",
      "files": [
        "*.js"
      ]
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-ci/issues"
  },
  "homepage": "https://github.com/prescottprue/firebase-ci",
  "dependencies": {
    "chalk": "^2.4.2",
    "command-exists": "^1.2.8",
    "commander": "^3.0.1",
    "figures": "^3.1.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@jedmao/semantic-release-npm-github-config": "^1.0.8",
    "babel-eslint": "^10.0.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^5.2.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.9",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.31",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
