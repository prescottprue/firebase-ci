{
  "name": "firebase-ci",
  "version": "0.10.0",
  "description": "Simplified Firebase interaction for continuous integration including deploying hosting, functions, and database/storage rules.",
  "main": "lib/index.js",
  "bin": {
    "firebase-ci": "./bin/firebase-ci"
  },
  "files": [
    "lib",
    "bin",
    "cmds"
  ],
  "scripts": {
    "clean:app": "rimraf lib",
    "clean:test": "rimraf coverage",
    "lint": "eslint src/**/**.ts cmds test bin/firebase-ci --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "env-cmd ./test/.env mocha ./test/**/**/*.spec.js",
    "test:cov": "npm run clean:test && nyc npm run test",
    "build:lib": "tsc",
    "build": "npm run clean:app && npm run build:lib",
    "watch": "npm run build:lib -- --stats --progress --colors --watch",
    "prepare": "npm run clean:app && npm run build",
    "pre-push": "npm run lint",
    "codecov": "cat coverage/lcov.info | codecov",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prescottprue/firebase-ci.git"
  },
  "keywords": [
    "firebase",
    "firebase ci",
    "firebase-tools",
    "ci",
    "deploy",
    "gitlab",
    "gitlab-ci",
    "firebase-functions",
    "travis-ci",
    "circle-ci"
  ],
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "npmName": "firebase-ci",
  "npmFileMap": [
    {
      "basePath": "/lib/",
      "files": [
        "*.js"
      ]
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-ci/issues"
  },
  "homepage": "https://github.com/prescottprue/firebase-ci",
  "dependencies": {
    "chalk": "^3.0.0",
    "command-exists": "^1.2.8",
    "commander": "^4.1.0",
    "figures": "^3.1.0",
    "lodash": "^4.17.15"
  },
  "peerDependencies": {
    "firebase-tools": "^6 || ^7"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "env-cmd": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "firebase-tools": "^7.11.0",
    "husky": "^3.0.9",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "typescript": "^3.6.2"
  }
}
