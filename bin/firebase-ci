#!/usr/bin/env node

const program = require('commander');

const pkg = require('../package.json');

program.version(pkg.version);

require('../cmds')(program);

program.on('*', function warnCommandUnknown(name) {
  /* eslint-disable no-console */
  console.log(`'${name}' is not a known command. See 'firebase-ci --help':`);
  /* eslint-enable no-console */
  program.outputHelp();
  process.exit(1);
});

program.parse(process.argv);

if (program.rawArgs.length < 3) {
  console.log("No command specified. See 'firebase-ci --help':") // eslint-disable-line no-console
  program.outputHelp()
  process.exit(1)
}
