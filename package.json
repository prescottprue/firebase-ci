{
  "name": "firebase-ci",
  "version": "0.2.0-alpha.11",
  "author": "prescottprue",
  "license": "MIT",
  "description": "Simplified Firebase interaction for continuous integration including deploying hosting, functions, and database/storage rules.",
  "main": "lib/index.js",
  "bin": {
    "firebase-ci": "./bin/firebase-ci"
  },
  "scripts": {
    "clean": "rimraf lib coverage",
    "lint": "eslint src cmds bin test",
    "lint:fix": "npm run lint -- --fix",
    "test": "env-cmd ./tests/.env mocha -R spec --compilers js:babel-core/register ./tests/setup.js ./tests/**/*.spec.js",
    "test:cov": "env-cmd ./tests/.env istanbul cover ./node_modules/mocha/bin/_mocha -- ./tests/** --recursive --report lcov --compilers js:babel-register --require babel-polyfill",
    "build:lib": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build": "npm run clean && npm run build:lib",
    "watch": "npm run build:lib -- --stats --progress --colors --watch",
    "prepublish": "npm run clean && npm run test && npm run build",
    "prepush": "npm run lint:fix",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build -g prescottprue/firebase-ci",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:publish": "npm run docs:clean && npm run docs:build && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'update book' && git push git@github.com:prescottprue/firebase-ci gh-pages --force"
  },
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-ci/issues"
  },
  "homepage": "https://github.com/prescottprue/firebase-ci",
  "repository": {
    "type": "git",
    "url": "https://github.com/prescottprue/firebase-ci.git"
  },
  "dependencies": {
    "autocmdr": "~0.0.7",
    "chalk": "^2.0.1",
    "child-process-promise": "^2.2.1",
    "firebase-tools": "^3.9.1",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "cross-env": "^3.1.4",
    "docdown": "^0.7.2",
    "documentation": "^4.0.0-beta15",
    "documentation-markdown-api-theme": "^1.0.2",
    "env-cmd": "^5.0.0",
    "eslint": "^3.14.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "gitbook-cli": "^2.3.0",
    "husky": "^0.14.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1"
  },
  "keywords": [
    "webpack",
    "firebase",
    "continuous",
    "integration",
    "travis",
    "ci"
  ],
  "npmName": "firebase-ci",
  "npmFileMap": [
    {
      "basePath": "/lib/",
      "files": [
        "*.js"
      ]
    }
  ],
  "files": [
    "src",
    "lib",
    "bin",
    "cmds"
  ]
}
